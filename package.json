{
  "name": "bool-network-js",
  "version": "0.2.1",
  "description": "Bool Network js api",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn generate:defs && yarn generate:meta",
    "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package bool-network-js/interfaces --input ./src/interfaces",
    "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package bool-network-js/interfaces --endpoint ./bool.json --output ./src/interfaces",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "Bool Network",
    "Substrate"
  ],
  "author": "abmatrix",
  "license": "ISC",
  "dependencies": {
    "@polkadot/api": "^1.8.1"
  },
  "devDependencies": {
    "@polkadot/typegen": "^1.8.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "files": [
    "lib/**/*"
  ]
}
